<header>
  <div class="heading">
    <h1><%= link_to 'Recipe DIARY', root_path, class: "title" %></h1>
  </div>
  <%= form_with(url: search_recipes_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: 'キーワードから探す', class: "recipe-search" %>
    <%= form.submit "検索", class: "search-button" %>
  <% end %>
  <div class="navbar">
    <% if user_signed_in? %>
    <ul class="nav-lists">
      <li><%= link_to current_user.nickname, "#" , class: "user-nickname", id: "user" %></li>
      <ul class="my-menu", id="menu" >
        <li>
        <%= link_to 'マイページ', user_path(current_user.id) , class: "my-page" %>
        <%= image_tag "my-page-icon.png", class:"my-page-icon" %>
        </li>
        <li>
        <%= link_to '日記一覧', "#" , class: "all-diary" %>
        <%= image_tag "diary-icon.png", class:"diary-icon" %>
        </li>
        <li>
        <%= link_to 'レシピを投稿する', "recipes/new" , class: "post-recipe" %>
        <%= image_tag "recipe-icon.png", class:"recipe-icon" %>
        </li>
      </ul>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
    </ul>
    <% else %>
    <ul class="nav-lists">
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    </ul>
    <% end %>
</div>
</header>